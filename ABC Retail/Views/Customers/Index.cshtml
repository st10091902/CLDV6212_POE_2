@model List<ABC_Retail.Models.CustomerEntity>
<h2>Customers</h2>
<p><a asp-action="Create" class="btn btn-primary">New Customer</a></p>
<table class="table">
    <thead><tr><th>Name</th><th>Email</th><th>Address</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr><td>@c.Name</td><td>@c.Email</td><td>@c.Address</td></tr>
        }
    </tbody>
</table>
