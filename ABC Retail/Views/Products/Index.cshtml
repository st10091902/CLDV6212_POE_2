@model List<ABC_Retail.Models.ProductEntity>

<h2>Products</h2>
<p><a asp-action="Create" class="btn btn-primary">Add Product</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.Price</td>
                <td>@p.StockQuantity</td>
            </tr>
        }
    </tbody>
</table>
